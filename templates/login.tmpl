{{ define "title"}}Login{{ end }}
{{ define "icon" }}{{ end }}
{{ define "description"}}Authenticate yourself{{ end }}

{{ define "css" }}
	<style>
		.login-box-body {
			border: 1px solid #c0c0c0;
		}
	</style>
{{ end }}

{{ define "content" }}
	<div class="login-box display-none">
		<div class="login-box-body">
			<form id="login-form">
				<div class="form-group has-feedback">
					<input id="login-name" class="form-control" placeholder="Name">
					<span class="glyphicon glyphicon-user form-control-feedback"></span>
				</div>
				<div class="form-group has-feedback">
					<input id="login-password" type="password" class="form-control" placeholder="Password">
					<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				</div>
				<div class="row">
					<div class="col-xs-12">
						<button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
					</div>
				</div>
			</form>
		</div>
	</div>
{{ end }}

{{ define "scripts" }}
	<script>
		$("#login-form").submit(function(event) {
			event.preventDefault();

			var data = {
				name: $('#login-name').val(),
				password: $('#login-password').val()
			};

			$.ajax({
				url: api_url + '/login',
				type: 'POST',
				data: JSON.stringify(data)
			})
			.done(function(data, status, jqxhr){
				$(location).attr('href', site_url)
			})
			.fail(function(jqxhr, status, error){
				console.log(error);
			});
		});

		$(window).on('resize', () => {
			$(".login-box").center(false);
		});
		$(".login-box").center(false);
		$(".login-box").show();
		$('#login-name').focus();
	</script>
{{ end }}
